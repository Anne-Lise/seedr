<div class="container">
  <div class="search-bar">Chercher une graine</div>
  <div> <%= link_to "+ Add a new seed", new_seedpack_path, class:"btn-add-seed-home" %> </div>
  <div class="display-seed-block">
    <div class="title-display-seed page-title">
      Availables seeds
    </div>
    <div class="seed-cards-grid">
      <% @seedpacks_available.each do |seedpack| %>
      <%= link_to seedpack_path(seedpack) do %>
      <div class="card-seed">
        <div class="seed-card-price"><%= seedpack.price %>€</div>
        <div class="card-img"><img src="https://source.unsplash.com/275x203/?flowers<%=rand(1..100)%>" alt="seed-image"></div>
        <div class="card-seed-content">
          <h2><%= seedpack.name %></h2>
          <div><p> <%= truncate seedpack.description, length: 50 %></p></div>
          </div>
      </div>
      <% end %>
      <%end%>
    </div>
  </div>
  <div class="map">
  </div>
</div>
