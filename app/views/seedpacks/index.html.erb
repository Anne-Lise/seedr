<h1><strong>Make the sharing green again</strong></h1>


<%= link_to " Add a new seed", new_seedpack_path, class:"btn btn-primary btn-lg" %>

<div class="container">
  <div class="row">
    <% @seedpacks.each do |seedpack| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card-seed" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?flowers');">
          <div class="card-seed-text">
            <h2><%= seedpack.name %></h2>
            <h3><%= seedpack.price %></h3>
            <h3> <%= seedpack.number %></h3>
            <%= link_to 'Details', seedpack_path(seedpack) %>
          </div>
        </div>
       </div>
        <%end%>
  </div>
</div>


