        <h1 id="title_seed"> Your New seed</h1>
        <div class="form">
          <%= simple_form_for @seedpack do |f| %>
          <%= f.error_notification %>

            <%= f.input :name,
                required: true,
                autofocus: true %>
            <%= f.input :description,
                required: true %>
            <%= f.input :price,
                required: true %>
            <%= f.input :number,
                required: true %>
            <%= f.input :image,
                required: true %>
        </div>
      <!-- </div> -->
    <!-- </div> -->
</div>
  <div class="form-actions" >
    <%= f.button :submit, "Add a new seed", class: "btn btn-success btn-form" %>
    <%= link_to  "Go back to list of seeds", seedpacks_path, class: "btn btn-success btn-form" %>
<% end %>
</div>


